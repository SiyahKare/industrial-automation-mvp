{
  "name": "industrial-automation-mvp",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -w @industrial/web build",
    "dev": "npm run -w @industrial/web dev",
    "start": "npm run -w @industrial/web start",
    "build:packages": "npm run -w @industrial/graph build && npm run -w @industrial/sdk build",
    "postinstall": "npm run build:packages"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "reactflow": "^11.11.4",
    "zustand": "^5.0.8"
  }
}
